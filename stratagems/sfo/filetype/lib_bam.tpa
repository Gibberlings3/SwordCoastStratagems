DEFINE_ACTION_FUNCTION clone_bam
    STR_VAR
           bam=""
           edits=""
           editstring=""
    BEGIN
         LAUNCH_ACTION_FUNCTION clone_template
                  STR_VAR file_list= ~%bam%~
                          file_ext=~BAM~
                          edits= ~%edits%~
                          editstring= ~%editstring%~
         END
END


