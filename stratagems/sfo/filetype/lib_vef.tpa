DEFINE_PATCH_FUNCTION VEF_build
BEGIN
   DELETE_BYTES 0x0 BUFFER_LENGTH
   INSERT_BYTES 0x0 0x18
   WRITE_ASCII 0x0 "VEF V1.0"
   WRITE_LONG 0x8 0x18
   WRITE_LONG 0x10 0x18
END

