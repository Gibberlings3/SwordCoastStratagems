IF
	RandomNum(3,1)
	Global("Chapter","GLOBAL",%bg1_chapter_2%)
	Global("spawnedkobolds","LOCALS",0)
THEN
	RESPONSE #100
		CreateCreature("%tutu_var%KOBOLD",[-1.-1],0) // Kobold
		SetGlobal("spawnedkobolds","LOCALS",1)
END

