BEGIN_ACTION_DEFINITION
       Name(Buff)
       TRIGGER
        ActionListEmpty()
        CombatCounter(0)
	!Detect(NearestEnemyOf(Myself))
	!CheckStatGT(Myself,0,SPELLFAILUREscsargument2)
