DEFINE_PATCH_FUNCTION pit_fiend
STR_VAR arguments=""
BEGIN
    PATCH_IF iwd_divine BEGIN
       SPRINT symbol CLERIC_SYMBOL_PAIN
    END ELSE BEGIN
       SPRINT symbol WIZARD_SYMBOL_FEAR
    END
