/////////////////////////////////////////////////////////////////////////////////
////////////////////  Nabassu
////////////////////////////////////////////////////////////////////////////////

DEFINE_PATCH_FUNCTION nabassu
STR_VAR arguments=""
BEGIN

    PATCH_MAKE_PATCH
       fiend_general=>tanarri
       animation=>TANARRI
       level_all=>12
       ac=>~-5~
       movement=>9
       remove_spells=>all
       add_spells=>"INNATE_FIEND_TELEPORT TANARI_SILENCE TANARI_VAMPIRIC_TOUCH TANARI_PARALYZE"
       strGT=>19
       dexGT=>14
       conGT=>19
       intGT=>14
       wisGT=>15
       chaGT=>18
       resist_magic=>50
    END
    LPF apply_patches STR_VAR filename file_ext=CRE edits=patch_data END

    REPLACE_CRE_ITEM ~BL3-12M4~ #0 #0 #0 NONE WEAPON1
    // change color for EE fiends
    PATCH_IF enhanced_edition BEGIN
		LPF check_ini STR_VAR ini=no_nabassu_color_change RET value END
		PATCH_IF !value BEGIN
			WRITE_LONG 0x28 IDS_OF_SYMBOL (animate FIEND_GREEN)
		END
	END
END

