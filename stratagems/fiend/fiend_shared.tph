       movement=>11
       ac=>~-8~
       resist_magicGT=>70
       strGT=>21
       dexGT=>18
       conGT=>20
       intGT=>20
       wisGT=>16
       chaGT=>25
       attacks=>2 // we'll follow atweaks and give them dual-wielding
