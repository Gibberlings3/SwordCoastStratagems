VARIABLE(IsSummoned=True)

//////////////////////////////////////////////////////////////////////////////////////////
///	Work around death animation bug
//////////////////////////////////////////////////////////////////////////////////////////

IF
	Die()
		OR(2)
			AreaCheck("ar6200")
			AreaCheck("ar2900")
THEN
	RESPONSE #100
		ReallyForceSpellDeadRES("baldead",Myself)
END

IF
	Die()
	IgnoreBlock(EnhancedEdition)
THEN
	RESPONSE #100
		DestroySelf()
END


