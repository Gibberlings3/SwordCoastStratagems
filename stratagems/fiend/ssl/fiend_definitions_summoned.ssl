INCLUDE FILE(%scsroot%/lib/ssl/shared_definitions.ssl)
BEGIN_ACTION_DEFINITION
	Name(Attack)
	TRIGGER
	       !HasItem("dw#sumfi",scstarget)
	ACTION
		RESPONSE #scsprob1
		SetGlobal("validtarget","LOCALS",1)
		EquipMostDamagingMelee()
		AttackOneRound(scstarget)
END

