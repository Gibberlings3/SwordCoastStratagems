@24101 = "Ausgeruht-Bonus (8 Stunden): +5 maximale Trefferpunkte."
@24102 = "Ausgeruht-Bonus (16 Stunden): +5 maximale Trefferpunkte, +1 auf Stärke / Geschiklichkeit / Konstitution (maximal 18)."
@24103 = "Ausgeruht-Bonus (24 Stunden): +10 maximale Trefferpunkte, +1 auf Stärke / Geschiklichkeit / Konstitution (maximal 18), +1 auf Rettungwürfe."
