  Global("balth_is_friendly","GLOBAL",1)
  CombatCounter(0)
  !See(NearestEnemyOf(Myself))
  !Range(Player1,15)
  !Global("FinalFight","AR6200",4)
THEN
  RESPONSE #100
    MoveToObject(Player1)
END

