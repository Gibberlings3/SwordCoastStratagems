IF
  HPPercentLT(Myself,50)
  !GlobalTimerNotExpired("PotionUse","LOCALS")
  OR(2)
     !Range(NearestEnemyOf(Myself),8)
     StateCheck(Myself,STATE_INVISIBLE)
