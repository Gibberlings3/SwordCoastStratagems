///////////////////////////////////////////////////////////////////////////
//	Consider going invisible if possible
///////////////////////////////////////////////////////////////////////////

DEFAULT TRIGGER()
IF TRIGGER
	!StateCheck(Myself,STATE_INVISIBLE)
	TriggerBlock(TruesightSafe)
	GlobalTimerExpired("redefend","LOCALS")
	Target(Myself)
THEN DO
	Action(SpellMyself,WIZARD_SHADOW_DOOR|200|100)
	Action(SpellMyself,WIZARD_INVISIBILITY|200|100)
	Action(Potion,"potn10",@101010|200|100)
END

