IF
	Global("aura","LOCALS",0)
	See(NearestEnemyOf(Myself))
THEN
	RESPONSE #100
		SetGlobal("aura","LOCALS",1)
		ReallyForceSpell(LastSeenBy(Myself),DRAGON_FEAR)
		Continue()
END

IF
	Delay(24)
	See(NearestEnemyOf(Myself))
	Global("aura","LOCALS",1)
THEN
	RESPONSE #100
		ReallyForceSpell(LastSeenBy(Myself),DRAGON_FEAR)
		Continue()
END


