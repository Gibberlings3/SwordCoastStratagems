
INCLUDE FILE (%scsroot%\lib\ssl\shared_definitions.ssl)


/////////////////////////////////////////////////////////
/////              Rest and recover
////////////////////////////////////////////////////////

IF
	See(NearestEnemyOf(Myself))
	Global("rest","LOCALS",0)
THEN
	RESPONSE #100
		SetGlobalTimer("rtime","LOCALS",2000)
		SetGlobal("rest","LOCALS",1)
		Continue()
END

IF
	Global("rest","LOCALS",1)
	GlobalTimerExpired("rtime","LOCALS")
	!See(NearestEnemyOf(Myself))
THEN
	RESPONSE #100
// reset all variables here
		ApplySpell(Myself,RESTORE_FULL_HEALTH) //healing spell
		Rest()
END

IF
	!Detect(NearestEnemyOf(Myself))
	!Global("inafight","LOCALS",1)
THEN
	RESPONSE #100
		NoAction()
END

///////////////////////////////////////////////////////////////////
///	Keening
///////////////////////////////////////////////////////////////////

IF
	See(NearestEnemyOf(Myself))
	!GlobalTimerNotExpired("DMWWTimestopRunning","GLOBAL")
THEN
	RESPONSE #100
		ReallyForceSpell(NearestEnemyOf(Myself),BURNING_MAN_KEENING)
		SetGlobalTimer("BurningManFearTimer","LOCALS",24)
END

/////////////////////////////////////////////////////////////////////
///	Cinder shower
/////////////////////////////////////////////////////////////////////

IF TRIGGER
	TargetBlock(EnemiesInOrderShort)
THEN DO
	Action(Spell,BURNING_MAN_CINDER_SHOWER|200|50)
END

////////////////////////////////////////////////////////////////
///	Banefire (dispelling bolt)
/////////////////////////////////////////////////////////////////

// target protective magic

IF TRIGGER
	TargetBlock(PCsInOrder)
	TriggerBlock(Enemy|Disabled|BreachTarget)
THEN DO
	Combine()
	Action(Spell,BURNING_MAN_BANEFIRE|100|50)
END

IF TRIGGER
	TargetBlock(PCsInOrder)
	TriggerBlock(Enemy|Disabled|SpellProtectionTarget)
THEN DO
	Combine()
	Action(Spell,BURNING_MAN_BANEFIRE|100|50)
END

// target randoms

IF TRIGGER
	TargetBlock(PCsInOrder)
	TriggerBlock(Enemy|Disabled)
THEN DO
	Combine()
	Action(Spell,BURNING_MAN_BANEFIRE|100|50)
END

