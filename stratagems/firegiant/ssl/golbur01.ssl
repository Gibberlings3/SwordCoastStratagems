////////////////////////////////////////////////////////////////////////////
///	Seek the heat
////////////////////////////////////////////////////////////////////////////

IF
	OR(2)
		Heard([ANYONE],405)
		Heard([ANYONE],409)
	!Range(LastHeardBy(Myself),15)
THEN
	RESPONSE #100
		MoveToObject(LastHeardBy(Myself))
END
