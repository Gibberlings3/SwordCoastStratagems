    // Abazigal - blue dragon - ONLY IF ASCENSION IS NOT INSTALLED

    ACTION_IF !FILE_EXISTS_IN_GAME ~abazdg02.cre~ BEGIN
     MAKE_PATCH
       dragon_general=>null
