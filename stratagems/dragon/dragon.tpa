                    DEATH_SPELL WIZARD_CHAIN_LIGHTNING WIZARD_FINGER_OF_DEATH DRAGON_STONE_SKIN
                    DRAGON_SILENCE SILVER_DRAGON_SEQUENCER~
    END
    LAF edit_creature STR_VAR creature=udsilver edits=patch_data END

    ////////////////////////////
    // Special
    ////////////////////////////
    
    // Thax - shadow dragon
    
