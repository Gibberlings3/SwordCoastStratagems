      // black dragons are clones of an unaltered Nizi
      
      COPY ~%scsroot%/%component_loc%/unaltered/dragblac.cre~ ~override/dw#abbl1.cre~
      
      MAKE_PATCH
       script_override=>~~
       script_class=>dw#abbld
       dialog=>dw#abbl1
       dv=>dw#abbl1
       allegiance=>enemy
       dragon_general=>null
       say_both_names=>3021
       level_all=>23
