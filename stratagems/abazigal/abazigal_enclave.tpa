   END
   LAF edit_creature STR_VAR creature=dw#abgre edits=patch_data END

   // red dragon is basically a Saladrex clone

   COPY ~%scsroot%/%component_loc%/unaltered/gorsal.cre~ ~override/dw#abred.cre~

