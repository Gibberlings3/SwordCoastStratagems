IF TRIGGER
	TargetBlock(PCsPreferringStrong)
	TriggerBlock(Disabled|Charm|MinorGlobe|MR|Enemy)
	CheckStatGT(scstarget,4,SAVEVSSPELL)
THEN DO
	Action(Spell,CLERIC_MENTAL_DOMINATION|50|50)
END

