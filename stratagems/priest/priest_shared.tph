		PATCH_IF level>=10 BEGIN
			ADD_MEMORIZED_SPELL "%INNATE_WIZARD_INVISIBLE_STALKER%" #0 innate 	
		END		
		ADD_MEMORIZED_SPELL "%INNATE_WIZARD_CHAOS%" #0 innate ( (level - 4) / 6)	
