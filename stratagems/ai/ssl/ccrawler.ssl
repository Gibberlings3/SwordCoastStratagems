INCLUDE FILE(%scsroot%/lib/ssl/shared_definitions.ssl)

IF TRIGGER
   TargetBlock(EnemiesInOrder)
   TriggerBlock(Enemy|Helpless)
   Range(scstarget,5)
THEN DO
     Action(Attack)
END

IF TRIGGER
   TargetBlock(EnemiesInOrder)
   TriggerBlock(Enemy|Helpless)
THEN DO
     Action(MoveIfEmpty)
END

IF
   See(NearestEnemyOf(Myself))
THEN
    RESPONSE #100
             AttackOneRound(NearestEnemyOf(Myself))
END
