IF
        RequireBlock(EnhancedEdition)
        See([PC])
        GlobalTimerNotExpired("runfromPC","LOCALS")
THEN
    RESPONSE #100
         RunAwayFromNoLeaveArea([PC],150)
END

IF
        IgnoreBlock(EnhancedEdition)
        See([PC])
        GlobalTimerNotExpired("runfromPC","LOCALS")
THEN
    RESPONSE #100
         RunAwayFromNoLeaveArea([PC],150)
END
