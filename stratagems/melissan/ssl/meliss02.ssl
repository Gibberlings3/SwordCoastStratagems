	TriggerBlock(MR100|SpellTurn|Slay|SINecromancy|Enemy)
	TriggerBlock(DirectDamageSafe)
	CheckStatGT(scstarget,0,SAVEVSSPELL)
THEN DO
	Action(SpellTimer,WIZARD_FINGER_OF_DEATH,finger,12|150|50)
