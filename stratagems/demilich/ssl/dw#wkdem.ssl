IF
	GlobalGT("melfnum","LOCALS",0)
	!HasItem("dw#melf",Myself)
THEN
	RESPONSE #100
		IncrementGlobal("melfnum","LOCALS",-1)
		ApplySpellRes("dw#melf",Myself)
		Continue()
END

